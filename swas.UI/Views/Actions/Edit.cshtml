@model swas.DAL.Models.tbl_mActions



@{
    ViewData["Title"] = "Edit  Action";
}
<style>
    /* Custom CSS for form styling */
    .form-container {
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Style for required field indicator */
    .required-indicator {
        color: red;
        font-size: 18px;
    }
</style>

<div class="card" style="width:50%;content-align:center;">
    <div class="card-body">
        <div class="border p-3 rounded">
            <h6 class="mb-0 text-uppercase" style="text-align: center;color:white;background-color:#9C059C;padding:1rem;">@ViewData["Title"]</h6>
            <hr>

            <form asp-action="Edit" class="row g-3" method="post" style="content-align:center;">

                <input type="hidden" asp-for="ActionsId" />
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Actions"><b>Action Name</b> <span class="required-indicator">*</span></label>
                            <input asp-for="Actions" class="form-control" />
                        </div>
                        <div class="form-group">
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12" style="text-align:center;">
                        <button type="submit" class="btn btn-primary" style="margin-top:1rem;">Update</button>
                        <a asp-action="Index" class="btn btn-secondary" style="margin-top:1rem;text-align:center;">Back to Index</a>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>

<script src="~/DeveloperJs/Actions.js"></script>