@model swas.DAL.Models.tbl_mStatus


@{
    ViewData["Title"] = "Create New Status";
}
<head>



    <style>
       
        .form-container {
            background-color: #f7f7f7;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

       
        .required-indicator {
            color: red;
            font-size: 18px;
        }
    </style>
</head>
<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="container-fluid">
            <form asp-action="CreateStatus" method="post" class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="StageId" class="control-label"><b>Stages</b> <span class="text-danger">*</span></label>
                            <select asp-for="StageId" class="form-control" id="stageid" required>
                                <option value="">----Select----</option>
                                @foreach (var stage in ViewBag.stage)
                                {
                                    <option value="@stage.StagesId">@stage.Stages</option>
                                }
                            </select>
                            <div class="invalid-feedback">Please select a stage.</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Status"><b>Status Name</b> <span class="required-indicator">*</span></label>
                            <input asp-for="Status" class="form-control" required onkeyup="ValInData(this)" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                            <div class="invalid-feedback">Please provide a Status name.</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Statseq"><b>StatSeq</b> <span class="required-indicator">*</span></label>
                        <input asp-for="Statseq" class="form-control" id="statseq" required onkeyup="ValInData(this)" />
                        <div class="invalid-feedback">Please provide the Status Seq </div>
                        <span asp-validation-for="Statseq" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <div class="text-center" style="margin-top: 2rem;">
                        <button type="submit" class="btn btn-primary" style="margin-right: 23px">Create</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('.dropdownsearch').select2();
    });
</script>

