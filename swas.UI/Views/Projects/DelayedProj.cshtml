@using swas.BAL.DTO
@model List<TimeExceeds>


@{
    ViewData["Title"] = "Limit Exceed Projects";
    int sno = 0;
    

}

<div class="card radius-10 w-100" style="margin-top: 0px; align-items:center; font-size:larger">
    <b><u>DETAILS OF DELAYED PROJECTS</u></b>
</div>

<div class="card radius-10 w-100">
    <div class="card-body">
       
        <table id="SoftwareType5" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Ser No</th>
                    <th>Proj ID </th>
                    <th>Proj Name</th>
                    <th>Held With</th>
                    <th>Fwd By*</th>
                    <th>Current Action</th>
                    <th>Comment*</th>
                    <th>Pending Since</th>
                    <th>Days Limit</th>
                    <th>No of Days Exceeded</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var project in Model)
                {
                    <tr>

                        <td>
                            @{
                                sno++;
                            }
                            @sno
                        </td>
                        <td>
                            @project.ProjId

                        </td>
                        <td>@project.ProjName</td>
                        <td>@project.helwith</td>

                        <td>@project.fwdby</td>
                        <td>@project.Actions</td>
                        <td>@project.Comment</td>
                        <td>@project.EditDeleteDate?.ToString("dd-MM-yyyy")</td>

                        <td>
                            @project.TimeLimit
                        </td>
                        <td>
                            @project.exceeds
                        </td>
                    </tr>
                }
            </tbody>
        </table>
   </div></div>

    